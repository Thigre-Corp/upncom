<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale= 1.0">
    <meta name="robots" content="index">
    {% block meta_description %}
    <meta name="description" content="Up'n'Com, agence de communication digitale et print, vous accompagne dans la création de votre site internet, la gestion de vos réseaux sociaux, la création de vos supports de communication et bien plus encore !">
    {% endblock %}
    <title>{% block title %}Up'n'Com{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400..700;1,400..700&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&family=Road+Rage&display=swap"
        rel="stylesheet">
    {% block stylesheets %}
    {% endblock %}

    {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% block javascripts %}
    <script src="{{ asset('/scripts/parallax.js') }}" defer></script>
    <script src="{{ asset('/scripts/intermediate-nav.js') }}" defer></script>
    <script src="{{ asset('/scripts/burger-quizz.js') }}" defer></script>
    <script src="{{ asset('/scripts/dialog-newsletter.js') }}" defer></script>

    {% endblock %}

</head>

<body>
    {% for message in app.flashes('message') %}
    <input hidden type="checkbox" id="closeAlert" class="closeAlert">
    <div class="alert alert-success" role="alert">
        {{ message }}
        <label for="closeAlert" class="closeAlertLabel">X</label>
    </div>
    </input>
    {% endfor %}
    {% block bodyheader %}
    <header class="frostedGlass header">
        <div class="logo">
            <a href="{{ path('home') }}" class="logo">Up'n'Com</a>
        </div>
        <div id="navbar" class="textCenter">

            <label class="burger-quizz" for="burger-quizz">
                <input type="checkbox" id="burger-quizz" name="burger-quizz" hidden></input>
                <div class="burger-sign">
                    <div class="burger-line"></div>
                    <div class="burger-line burger-line2"></div>
                    <div class="burger-line burger-line2"></div>
                    <div class="burger-line"></div>
                </div>
            </label>


            <nav class="nav-menu" id="toggleMenu">
                <ul>
                    <li>
                        <a href="{{ path('home')}}">ACCUEIL</a>
                    </li>
                    <li>
                        <a href="{{ path('app_service_index')}}">SERVICES</a>
                    </li>
                    <li>
                        <a href="{{ path('app_article_index')}}">BLOG</a>
                    </li>
                    <li>
                        <a href="{{ path('app_contact')}}">CONTACT</a>
                    </li>
                    <li>
                        <a href="{{ path('app_realisation')}}">REALISATIONS</a>
                    </li>
                    <li class="socials">
                        <a aria-label="lien vers la page Facebook de Up'n'Com" href="https://www.facebook.com/Upncom.fr/">{{ ux_icon('fa:facebook-square', {class:
                            'socialsIcon'}) }}</a>
                        <a aria-label="lien vers la page Instagram de Up'n'Com" href="https://www.instagram.com/upncom.fr/">{{ ux_icon('fa:instagram', {class:
                            'socialsIcon'}) }}</a>
                        <a aria-label="lien vers la page LindekIn de Up'n'Com" href="https://www.linkedin.com/company/up-n-com/">{{ ux_icon('fa:linkedin-square', {class:
                            'socialsIcon'}) }}</a>
                    </li>
                </ul>
            </nav>
    </header>
    {% endblock %}
    <main>
        <div id="burgerMask" class="frostedGlass"></div>

        {% block body %}
        <p>No...body</p>
        {% endblock %}
    </main>
    {{ include('_modules/_footer.twig') }}

</body>

</html>